<h1>Cocktail name: <%= @cocktail.name %></h1>
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 300, crop: :fill %>
<h3>Ingredients:</h3>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to 'Destroy', dose_path(dose), method: :delete , data: { confirm: "Are you sure?" }%>
  </li>
  <% end %>
</ul>
<%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) %>
<%= link_to "See all cocktails", root_path  %>
